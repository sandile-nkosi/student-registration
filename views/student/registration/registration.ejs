<%- include('../../shared/includes/head', { pageTitle: 'Student Registration' }) %>
<script src="/scripts/module-selector.js" defer></script>
<link rel="stylesheet" href="/styles/reg.css">
<link rel="icon" type="image/png" href="images/nwu-logo.png">
</head>
  <body>
  <%- include('../../shared/includes/header') %>
    <main>
      <h1>Student Registration</h1>
      <h2>Modules</h2>

      <section class="alert">
        <h2>Module Pre-requisite error</h2>
        <p>modules: </p>    
      </section>
      <br>
      <section>  
        <select id="yearSelector">
          <option value="">Select a year</option>
          <option value="year1">Year 1</option>
          <option value="year2">Year 2</option>
          <option value="year3">Year 3</option>
          <option value="year4">Year 4</option>    
        </select>

        <p>
        <input type="checkbox" id="bursary" value="1">
        <label for="bursary" id="bursary">Bursary/Nsfas</label>
        </p>

        <p>
          <input type="file" class="hidden" id="documents">
        </p>
        


        <div id="year1" class="hidden">
          <div class="table-container">
          <table>
            <thead>
              <th> Select Modules:
              <tbody>
                      <% for (const module of modules) { %>
                        <% if (module.year===1) { %>
                            <tr>
                              <td>
                              <ul>
                                <li>
                                    <input type="checkbox" id="<%= module.moduleCode%>" value="<%= module.moduleCode%>">
                                    <label for="<%= module.moduleCode%>">
                                    <%= module.moduleCode%>
                                    </label>
                                </li>
                              </ul>
                              </td>
                            </tr>
                          <% } %>
                            <% } %>
              </tbody>
              </th>
            </thead>
          </table>
          </div>
        </div>

                <div id="year2" class="hidden">
                  <div class="table-container">
                  <table>
                    <thead>
                      <th>Select Modules:
                    <tbody>
                      <% for (const module of modules) { %>
                        <% if (module.year===2) { %>
                          <tr>
                            <td>
                            <ul>
                              <li>
                                <input type="checkbox" id="<%= module.moduleCode%>" value="<%= module.moduleCode%>">
                                <label for="<%= module.moduleCode%>">
                                  <%= module.moduleCode%>
                                </label>
                              </li>
                            </ul>
                            </td>
                          </tr>
                          <% } %>
                            <% } %>
                    </tbody>
                    </thead>
                    </th>
                  </table>
                  </div>
                </div>

              <div id="year3" class="hidden">
                <div class="table-container">
                <table>
                  <thead>
                    <th>Select Modules:
                  <tbody>
                    <% for (const module of modules) { %>
                      <% if (module.year===3) { %>
                        <tr>
                          <td>
                          <ul>
                            <li>
                              <input type="checkbox" id="<%= module.moduleCode%>" value="<%= module.moduleCode%>">
                              <label for="<%= module.moduleCode%>">
                                <%= module.moduleCode%>
                              </label>
                            </li>
                          </ul>
                          </td>
                        </tr>
                        <% } %>
                          <% } %>
                  </tbody>
                  </th>
                  </thead>
                </table>
                </div>
              </div>

                      <div id="year4" class="hidden">
                        <div class="table-container">
                        <table>
                          <thead>
                            <th>Select Modules:
                          <tbody>
                            <% for (const module of modules) { %>
                              <% if (module.year===4) { %>
                                <tr>
                                  <td>
                                  <ul>
                                    <li>
                                      <input type="checkbox" id="<%= module.moduleCode%>" value="<%= module.moduleCode%>">
                                      <label for="<%= module.moduleCode%>">
                                        <%= module.moduleCode%>
                                      </label>
                                    </li>
                                  </ul>
                                  </td>
                                </tr>
                                <% } %>
                                  <% } %>
                          </tbody>
                          </th>
                          </thead>
                        </table>
                        </div>
                      </div>
      </section>
    </main>

<%- include('../../shared/includes/footer') %>